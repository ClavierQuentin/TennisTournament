@model TennisTournament.Models.MatchCreateViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Organiser un match</h1>
<hr />
<div class="row">
    <div class="col-md-8 offset-md-2">
        <form asp-action="Create" class="needs-validation" novalidate>
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FirstPlayerID" class="form-label"></label>
                <select asp-for="FirstPlayerID" asp-items="@(ViewBag.playersList)" class="form-select" required>
                    <option value="">-- Choisissez le premier joueur --</option>
                </select>
                <div class="invalid-feedback">Choisissez le premier joueur</div>
            </div>
            <div class="form-group">
                <label asp-for="SecondPlayerID" class="form-label"></label>
                <select asp-for="SecondPlayerID" asp-items="@(ViewBag.playersList)" class="form-select" required>
                    <option value="">-- Choisissez le deuxième joueur --</option>
                </select>
                <div class="invalid-feedback">Choisissez le deuxième joueur</div>
            </div>
            <div class="form-group">
                <label asp-for="StartingDate" class="form-label"></label>
                <input asp-for="StartingDate" class="form-control" required />
                <div class="invalid-feedback">Choisissez la date du match</div>
            </div>
            <div class="form-group">
                <label asp-for="CourtID" class="form-label"></label>
                <select asp-for="CourtID" asp-items="@(ViewBag.courtList)" class="form-select" required>
                    <option value="">-- Choisissez un court --</option>
                </select>
                <div class="invalid-feedback">Choisissez un court</div>
            </div>
            <div class="form-group">
                <label asp-for="RefereeID" class="form-label"></label>
                <select asp-for="RefereeID" asp-items="@(ViewBag.refereesList)" class="form-select" required>
                    <option value="">-- Choisissez un arbitre --</option>
                </select>
                <div class="invalid-feedback">Choisissez un arbitre</div>
            </div>
            <div class="form-group">
                <label asp-for="TournamentID" class="form-label"></label>
                <select asp-for="TournamentID" asp-items="@(ViewBag.tournamentList)" class="form-select" required>
                    <option value="">-- Choisissez un tournoi --</option>
                </select>
                <div class="invalid-feedback">Choisissez un tournoi</div>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Create</button>
            </div>
        </form>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}