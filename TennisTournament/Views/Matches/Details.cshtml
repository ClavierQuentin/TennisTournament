@model TennisTournament.Entities.Match

@{
    ViewData["Title"] = "Détails";
}

<h1 class="text-center my-4">Details du match</h1>

<div class="container">
    <div class="row">
        <div class="col-md-4 border-top pt-3">
            <h2>Joueur 1</h2>
            <dl class="row">
                <dt class="col-sm-4">Prénom et Nom </dt>
                <dd class="col-sm-8">@Model.FirstPlayer.FirstName @Model.FirstPlayer.LastName</dd>
                <dt class="col-sm-4">Nationalité </dt>
                <dd class="col-sm-8">@Model.FirstPlayer.Nationality</dd>
                <dt class="col-sm-4">Sexe </dt>
                <dd class="col-sm-8">@Model.FirstPlayer.Sexe</dd>
            </dl>
        </div>
        <div class="col-md-4 border-top pt-3">
            <h2>Date, heure et arbitre</h2>
            <dl class="row">
                <dt class="col-sm-2">Début </dt>
                <dd class="col-sm-10">@Model.StartingDate.ToString("dd/MM/yyyy HH:mm")</dd>
                <dt class="col-sm-2">Arbitre</dt>
                <dd class="col-sm-10">@Model.Referee.LastName @Model.Referee.FirstName</dd>
            </dl>
        </div>
        <div class="col-md-4 border-top pt-3">
            <h2>Joueur 2</h2>
            <dl class="row">
                <dt class="col-sm-4">Prénom et Nom </dt>
                <dd class="col-sm-8">@Model.SecondPlayer.FirstName @Model.SecondPlayer.LastName</dd>
                <dt class="col-sm-4">Nationalité </dt>
                <dd class="col-sm-8">@Model.SecondPlayer.Nationality</dd>
                <dt class="col-sm-4">Sexe </dt>
                <dd class="col-sm-8">@Model.SecondPlayer.Sexe</dd>
            </dl>
        </div>
    </div>
    <div class="row border-top pt-3">
        <div class="col-md-12">
            <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model?.ID">Modifier</a>
            <a class="btn btn-secondary" asp-action="Index">Retour à la liste</a>
        </div>
    </div>
</div>

